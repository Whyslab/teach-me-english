async function startTraining() {
    try {
        // 0. –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≤—Ä–µ–º–µ–Ω–∏ –∏ —ç–ª–µ–º–µ–Ω—Ç–æ–≤
        const now = Date.now();
        const trainSect = document.getElementById('training-section');
        const mainUI = document.getElementById('main-ui');
        
        // –°–Ω–∞—á–∞–ª–∞ —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∏—Ä—É–µ–º –≤—Ä–µ–º—è (–∂–¥–µ–º –æ—Ç–≤–µ—Ç–∞ –æ—Ç —Å–µ—Ä–≤–µ—Ä–∞)
        await loadTimerFromServer();

        // 1. –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤—Ä–µ–º–µ–Ω–∏: timeLeft –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –æ–±—ä—è–≤–ª–µ–Ω–∞ –≥–ª–æ–±–∞–ª—å–Ω–æ (let timeLeft)
        if (typeof timeLeft === 'undefined' || timeLeft <= 0) {
            alert("–í—Ä–µ–º—è –∑–∞–∫–æ–Ω—á–∏–ª–æ—Å—å! –ù–∞–∂–º–∏ '+5 –º–∏–Ω', —á—Ç–æ–±—ã –ø—Ä–æ–¥–æ–ª–∂–∏—Ç—å.");
            return;
        }

        // 2. –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–ª–æ–≤: —É–±–µ–∂–¥–∞–µ–º—Å—è, —á—Ç–æ myWords —Å—É—â–µ—Å—Ç–≤—É–µ—Ç
        if (!Array.isArray(myWords)) {
            console.error("–ú–∞—Å—Å–∏–≤ —Å–ª–æ–≤ myWords –Ω–µ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω");
            return;
        }

        const wordsToReview = myWords.filter(w => !w.nextReview || w.nextReview <= now);
        
        if (wordsToReview.length === 0) {
            alert("–ù–∞ —Å–µ–≥–æ–¥–Ω—è –≤—Å—ë! –í—Å–µ –¥–æ—Å—Ç—É–ø–Ω—ã–µ —Å–ª–æ–≤–∞ –ø–æ–≤—Ç–æ—Ä–µ–Ω—ã.");
            return;
        }

        // 3. –ó–∞—â–∏—Ç–∞ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
        if (trainSect) {
            trainSect.onselectstart = () => false; 
            trainSect.oncopy = () => false;
        }

        // 4. –ó–∞–ø—É—Å–∫ —Ç–∞–π–º–µ—Ä–∞ (–µ—Å–ª–∏ –µ—â–µ –Ω–µ –∑–∞–ø—É—â–µ–Ω)
        if (!timerId) {
            const statusEl = document.getElementById('timer-status');
            if (statusEl) {
                statusEl.textContent = "–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞ –∏–¥–µ—Ç...";
                statusEl.style.color = "#00ffcc";
            }

            timerId = setInterval(async () => {
                if (timeLeft <= 0) {
                    clearInterval(timerId);
                    timerId = null;
                    await saveTimerToServer();
                    if (typeof finishDay === 'function') finishDay();
                    return;
                }

                timeLeft--;
                if (typeof updateUI === 'function') updateUI(); 

                if (timeLeft % 10 === 0) {
                    saveTimerToServer();
                }
            }, 1000);
        }

        // 5. –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –¥–∞–Ω–Ω—ã—Ö (–í–ê–ñ–ù–û: –∑–∞–ø–∏—Å—ã–≤–∞–µ–º –≤ –≥–ª–æ–±–∞–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ)
        isSpellingMode = false;
        mainQueue = [...wordsToReview].sort(() => Math.random() - 0.5);
        activePool = [];
        currentWordIndex = 0;
        
        if (typeof fillPool === 'function') fillPool();
        
        // 6. –ü—Ä—è—á–µ–º –ª–∏—à–Ω–µ–µ –∏ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫—É
        const elementsToHide = [
            document.getElementById('level-stats'),
            mainUI,
            document.querySelector('h1'),
            document.querySelector('.progress-wrapper'),
            document.getElementById('top-panel') || document.querySelector('.top-panel')
        ];
        
        elementsToHide.forEach(el => { if (el) el.style.display = 'none'; });

        if (trainSect) {
            trainSect.style.display = 'flex';
            document.body.classList.add('no-scroll');
            if (typeof updateFlashcard === 'function') updateFlashcard();
        }

    } catch (error) {
        console.error("–ö—Ä–∏—Ç–∏—á–µ—Å–∫–∞—è –æ—à–∏–±–∫–∞ –≤ startTraining:", error);
    }
}
// === 1. –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø –ò –°–û–°–¢–û–Ø–ù–ò–ï ===
let timeLeft = 0; 
let timerId = null;
let myWords = [];
let mainQueue = [];       
let trainingHistory = []; 
let activePool = [];      
let currentWordIndex = 0;
let cardClickStage = 0; 
let isMuted = localStorage.getItem('isMuted') === 'true';
let isSpellingMode = false;
let isLoaded = false; 
const POOL_LIMIT = 50;
const TRAINING_TIME = 3600;

// –ò–Ω—Ç–µ—Ä–≤–∞–ª—ã SRS
const INTERVALS = {
    0: 0,
    1: 24 * 60 * 60 * 1000,
    2: 3 * 24 * 60 * 60 * 1000,
    3: 7 * 24 * 60 * 60 * 1000,
    4: 14 * 24 * 60 * 60 * 1000,
    5: 30 * 24 * 60 * 60 * 1000
};

let streakData = JSON.parse(localStorage.getItem('streakData')) || {
    count: 0, lastDate: null, todayCount: 0
};

// –≠–ª–µ–º–µ–Ω—Ç—ã DOM
const inputEn = document.getElementById('input-en');
const inputRu = document.getElementById('input-ru');
const inputEx = document.getElementById('input-example');
const inputExRu = document.getElementById('input-ex-ru');
const trainSect = document.getElementById('training-section');
const mainUI = document.getElementById('main-ui');
const flashcard = document.getElementById('flashcard');
const spellingInput = document.getElementById('spelling-input');
const spellingFeedback = document.getElementById('spelling-feedback');
const spellingArea = document.getElementById('spelling-area');

// === 2. –û–°–ù–û–í–ù–´–ï –§–£–ù–ö–¶–ò–ò (API –ò –†–ï–ù–î–ï–†) ===

async function loadWords() {
    try {
        const response = await fetch('http://localhost:3000/api/words');
        const data = await response.json();
        myWords = (Array.isArray(data) ? data : []).map(w => ({
            ...w, example: w.example || "", exampleTranslate: w.exampleTranslate || ""
        }));
        isLoaded = true; 
        render();
    } catch (e) { console.error("–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–ª–æ–≤!", e); }
}

async function save() {
    if (!isLoaded) return;
    try {
        await fetch('http://localhost:3000/api/sync', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(myWords)
        });
    } catch (e) { console.error("–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è", e); }
}

function render() {
    const container = document.getElementById('cards-container');
    if (!container) return;
    container.innerHTML = ''; 
    const now = Date.now();

    myWords.forEach(word => { 
        const level = word.level || 0;
        const isReady = !word.nextReview || word.nextReview <= now;
        const isMax = level === 5;
        
        container.innerHTML += `
        <div class="card ${isReady && !isMax ? 'needs-review' : ''}" data-id="${word.id}" ${isMax ? 'style="opacity: 0.5"' : ''}>
            <div class="card-content">
                <span class="level-indicator">–£—Ä. ${level}</span>
                <span class="original">${word.original}</span> ‚Äî 
                <span class="translation hidden">${word.translate}</span>
            </div>
            <div class="actions">
                <button class="speak-btn">üîä</button>
                <button class="delete-btn">&times;</button>
            </div>
        </div>`;
    });
    updateOverallProgress();
    updateLevelStats();
}

// === 3. –õ–û–ì–ò–ö–ê –¢–†–ï–ù–ò–†–û–í–ö–ò ===

async function startTraining() {
    const now = Date.now();
    await loadTimerFromServer();

    if (timeLeft <= 0) {
        alert("–í—Ä–µ–º—è –∑–∞–∫–æ–Ω—á–∏–ª–æ—Å—å! –î–æ–±–∞–≤—å +5 –º–∏–Ω.");
        return;
    }

    const wordsToReview = myWords.filter(w => (!w.nextReview || w.nextReview <= now) && w.level < 5);
    
    if (wordsToReview.length === 0) {
        alert("–°–ª–æ–≤ –¥–ª—è –ø–æ–≤—Ç–æ—Ä–µ–Ω–∏—è –Ω–µ—Ç!");
        return;
    }

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –æ—á–µ—Ä–µ–¥–∏
    mainQueue = [...wordsToReview].sort(() => Math.random() - 0.5);
    activePool = [];
    currentWordIndex = 0;
    fillPool();

    // –ó–∞–ø—É—Å–∫ —Ç–∞–π–º–µ—Ä–∞
    if (!timerId) {
        timerId = setInterval(async () => {
            if (timeLeft <= 0) {
                clearInterval(timerId);
                timerId = null;
                await saveTimerToServer();
                finishDay();
                return;
            }
            timeLeft--;
            updateUI();
            if (timeLeft % 10 === 0) saveTimerToServer();
        }, 1000);
    }

    // –°–º–µ–Ω–∞ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
    [mainUI, document.querySelector('h1'), document.querySelector('.progress-wrapper'), document.getElementById('level-stats')].forEach(el => {
        if (el) el.style.display = 'none';
    });
    if (trainSect) {
        trainSect.style.display = 'flex';
        document.body.classList.add('no-scroll');
        updateFlashcard();
    }
}

function updateFlashcard() {
    if (activePool.length === 0) {
        finishTraining();
        return;
    }

    cardClickStage = 0; 
    const word = activePool[currentWordIndex];
    
    if (spellingInput) {
        spellingInput.value = "";
        spellingInput.focus();
        spellingFeedback.innerText = "";
    }

    const isEnToRu = Math.random() > 0.5;
    const front = document.getElementById('card-front');
    const back = document.getElementById('card-back-text');
    
    if (isEnToRu) {
        front.innerText = word.original;
        back.innerText = word.translate;
        word.currentExpectedAnswer = word.translate;
    } else {
        front.innerText = word.translate;
        back.innerText = word.original;
        word.currentExpectedAnswer = word.original;
    }

    document.getElementById('card-example').innerText = word.example || "";
    document.getElementById('card-example-translate').innerText = word.exampleTranslate || "";
    document.getElementById('total-remaining').innerText = mainQueue.length;
    document.getElementById('current-pool-count').innerText = `${currentWordIndex + 1}/${activePool.length}`;
}

// –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤–≤–æ–¥–∞ –≤ —Ä–µ–∂–∏–º–µ –ø–∏—Å—å–º–∞
spellingInput.onkeydown = (e) => {
    if (e.key === 'Enter') {
        if (flashcard.classList.contains('is-flipped')) {
            document.getElementById('btn-know').click();
            return;
        }
        const word = activePool[currentWordIndex];
        const userValue = spellingInput.value.trim().toLowerCase();
        const correct = word.currentExpectedAnswer.trim().toLowerCase();

        if (userValue === correct) {
            spellingFeedback.innerText = "‚úÖ –í–µ—Ä–Ω–æ!";
            spellingFeedback.style.color = "#28a745";
        } else {
            spellingFeedback.innerText = `‚ùå –ü—Ä–∞–≤–∏–ª—å–Ω–æ: ${correct}`;
            spellingFeedback.style.color = "#dc3545";
        }
        flashcard.classList.add('is-flipped');
        cardClickStage = 1;
    }
};

function finishTraining() {
    if (trainSect) trainSect.style.display = 'none';
    if (mainUI) mainUI.style.display = 'block';
    document.querySelectorAll('h1, .progress-wrapper, #level-stats').forEach(el => el.style.display = 'flex');
    document.body.classList.remove('no-scroll');
    render();
}

// === 4. –í–°–ü–û–ú–û–ì–ê–¢–ï–õ–¨–ù–´–ï –§–£–ù–ö–¶–ò–ò ===
async function loadTimerFromServer() {
    try {
        const response = await fetch('http://localhost:3000/api/timer');
        const data = await response.json();
        timeLeft = data.timeLeft;
        updateUI();
    } catch (e) { console.error("–û—à–∏–±–∫–∞ —Ç–∞–π–º–µ—Ä–∞"); }
}

async function saveTimerToServer() {
    try {
        await fetch('http://localhost:3000/api/timer', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ timeLeft: timeLeft })
        });
    } catch (e) { }
}

function updateUI() {
    const el = document.getElementById('timer-display');
    if (!el) return;
    const mins = Math.floor(timeLeft / 60);
    const secs = timeLeft % 60;
    el.textContent = `${mins}:${secs < 10 ? '0' : ''}${secs}`;
}

function fillPool() {
    while (activePool.length < POOL_LIMIT && mainQueue.length > 0) {
        activePool.push(mainQueue.shift());
    }
}

// –°–ø–µ—Ü–∏—Ñ–∏—á–µ—Å–∫–∏–µ —Ñ—É–Ω–∫—Ü–∏–∏ –∫–Ω–æ–ø–æ–∫
function safeSetClick(id, callback) {
    const el = document.getElementById(id);
    if (el) el.onclick = callback;
}

// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
window.addEventListener('DOMContentLoaded', async () => {
    await loadTimerFromServer();
    await loadWords();
    
    safeSetClick('start-training-btn', startTraining);
    safeSetClick('add-time-btn', () => addExtraTime(5));
    safeSetClick('stop-training', finishTraining);
    
    const savedTheme = localStorage.getItem('selectedTheme');
    if (savedTheme) setTheme(savedTheme);
});
